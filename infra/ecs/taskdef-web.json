{
  "family": "orya-web",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "runtimePlatform": {
    "cpuArchitecture": "ARM64",
    "operatingSystemFamily": "LINUX"
  },
  "executionRoleArn": "arn:aws:iam::495219734037:role/orya-ecs-exec-role",
  "taskRoleArn": "arn:aws:iam::495219734037:role/orya-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "orya-web",
      "image": "{{ECR_URI}}/orya-web:latest",
      "portMappings": [{"containerPort": 3000, "protocol": "tcp"}],
      "environment": [
        {"name": "NODE_ENV", "value": "production"}
      ],
      "secrets": [
        {"name": "DATABASE_URL", "valueFrom": "{{orya/prod/app:DATABASE_URL}}"},
        {"name": "DIRECT_URL", "valueFrom": "{{orya/prod/app:DIRECT_URL}}"},
        {"name": "APP_ENV", "valueFrom": "{{orya/prod/app:APP_ENV}}"},
        {"name": "QR_SECRET_KEY", "valueFrom": "{{orya/prod/app:QR_SECRET_KEY}}"},
        {"name": "APP_BASE_URL", "valueFrom": "{{orya/prod/app:APP_BASE_URL}}"},
        {"name": "NEXT_PUBLIC_BASE_URL", "valueFrom": "{{orya/prod/app:NEXT_PUBLIC_BASE_URL}}"},
        {"name": "NEXT_PUBLIC_APP_ENV", "valueFrom": "{{orya/prod/app:NEXT_PUBLIC_APP_ENV}}"},
        {"name": "ORYA_CRON_SECRET", "valueFrom": "{{orya/prod/app:ORYA_CRON_SECRET}}"},
        {"name": "REDIS_URL", "valueFrom": "{{orya/prod/app:REDIS_URL}}"},
        {"name": "SUPABASE_URL", "valueFrom": "{{orya/prod/supabase:SUPABASE_URL}}"},
        {"name": "NEXT_PUBLIC_SUPABASE_URL", "valueFrom": "{{orya/prod/supabase:NEXT_PUBLIC_SUPABASE_URL}}"},
        {"name": "SUPABASE_ANON_KEY", "valueFrom": "{{orya/prod/supabase:SUPABASE_ANON_KEY}}"},
        {"name": "NEXT_PUBLIC_SUPABASE_ANON_KEY", "valueFrom": "{{orya/prod/supabase:NEXT_PUBLIC_SUPABASE_ANON_KEY}}"},
        {"name": "SUPABASE_SERVICE_ROLE", "valueFrom": "{{orya/prod/supabase:SUPABASE_SERVICE_ROLE}}"},
        {"name": "STRIPE_SECRET_KEY", "valueFrom": "{{orya/prod/payments:STRIPE_SECRET_KEY}}"},
        {"name": "STRIPE_WEBHOOK_SECRET", "valueFrom": "{{orya/prod/payments:STRIPE_WEBHOOK_SECRET}}"},
        {"name": "STRIPE_PAYOUTS_WEBHOOK_SECRET_LIVE", "valueFrom": "{{orya/prod/payments:STRIPE_PAYOUTS_WEBHOOK_SECRET_LIVE}}"},
        {"name": "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY", "valueFrom": "{{orya/prod/payments:NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY}}"},
        {"name": "APPLE_MAPS_TEAM_ID", "valueFrom": "{{orya/prod/apple:APPLE_MAPS_TEAM_ID}}"},
        {"name": "APPLE_MAPS_KEY_ID", "valueFrom": "{{orya/prod/apple:APPLE_MAPS_KEY_ID}}"},
        {"name": "APPLE_MAPS_PRIVATE_KEY_BASE64", "valueFrom": "{{orya/prod/apple:APPLE_MAPS_PRIVATE_KEY_BASE64}}"},
        {"name": "APPLE_MAPS_ORIGIN", "valueFrom": "{{orya/prod/apple:APPLE_MAPS_ORIGIN}}"},
        {"name": "SES_REGION", "valueFrom": "{{orya/prod/email:SES_REGION}}"},
        {"name": "SES_IDENTITY_DOMAIN", "valueFrom": "{{orya/prod/email:SES_IDENTITY_DOMAIN}}"},
        {"name": "EMAIL_FROM", "valueFrom": "{{orya/prod/email:EMAIL_FROM}}"},
        {"name": "SES_SMTP_USERNAME", "valueFrom": "{{orya/prod/email:SES_SMTP_USERNAME}}"},
        {"name": "SES_SMTP_PASSWORD", "valueFrom": "{{orya/prod/email:SES_SMTP_PASSWORD}}"},
        {"name": "APPLE_SIGNIN_SERVICE_ID", "valueFrom": "{{orya/prod/apple:APPLE_SIGNIN_SERVICE_ID}}"},
        {"name": "APPLE_SIGNIN_REDIRECT_URI", "valueFrom": "{{orya/prod/apple:APPLE_SIGNIN_REDIRECT_URI}}"},
        {"name": "APPLE_SIGNIN_TEAM_ID", "valueFrom": "{{orya/prod/apple:APPLE_SIGNIN_TEAM_ID}}"},
        {"name": "APPLE_SIGNIN_KEY_ID", "valueFrom": "{{orya/prod/apple:APPLE_SIGNIN_KEY_ID}}"},
        {"name": "APPLE_SIGNIN_PRIVATE_KEY_BASE64", "valueFrom": "{{orya/prod/apple:APPLE_SIGNIN_PRIVATE_KEY_BASE64}}"},
        {"name": "APNS_TEAM_ID", "valueFrom": "{{orya/prod/apple:APNS_TEAM_ID}}"},
        {"name": "APNS_KEY_ID", "valueFrom": "{{orya/prod/apple:APNS_KEY_ID}}"},
        {"name": "APNS_PRIVATE_KEY_BASE64", "valueFrom": "{{orya/prod/apple:APNS_PRIVATE_KEY_BASE64}}"},
        {"name": "APNS_TOPIC", "valueFrom": "{{orya/prod/apple:APNS_TOPIC}}"},
        {"name": "ADMIN_TOTP_ENCRYPTION_KEY", "valueFrom": "{{orya/prod/app:ADMIN_TOTP_ENCRYPTION_KEY}}"},
        {"name": "ADMIN_USER_IDS", "valueFrom": "{{orya/prod/app:ADMIN_USER_IDS}}"},
        {"name": "ADMIN_ACTION_IP_ALLOWLIST", "valueFrom": "{{orya/prod/app:ADMIN_ACTION_IP_ALLOWLIST}}"},
        {"name": "ADMIN_BREAK_GLASS_TOKEN", "valueFrom": "{{orya/prod/app:ADMIN_BREAK_GLASS_TOKEN}}"},
        {"name": "ADMIN_MFA_REQUIRED", "valueFrom": "{{orya/prod/app:ADMIN_MFA_REQUIRED}}"},
        {"name": "INFRA_READ_ONLY", "valueFrom": "{{orya/prod/app:INFRA_READ_ONLY}}"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/orya/prod/web",
          "awslogs-region": "eu-west-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -sf -H \"x-orya-cron-secret: ${ORYA_CRON_SECRET}\" http://localhost:3000/api/internal/ops/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
