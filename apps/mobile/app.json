{
  "expo": {
    "name": "ORYA",
    "slug": "orya",
    "scheme": "orya",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0b101a"
    },
    "ios": {
      "bundleIdentifier": "com.orya.app.prod",
      "supportsTablet": true,
      "usesAppleSignIn": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "Precisamos de acesso à galeria para atualizar a tua foto de perfil.",
        "NSCameraUsageDescription": "Precisamos de acesso à câmara para atualizar a tua foto de perfil.",
        "NSLocationWhenInUseUsageDescription": "Usamos a tua localização para sugerir eventos perto de ti."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0b101a"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.orya.app.prod",
      "permissions": ["ACCESS_COARSE_LOCATION", "ACCESS_FINE_LOCATION"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-apple-authentication",
      "expo-notifications",
      "expo-web-browser",
      "expo-font",
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.orya.app"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "0ff86898-a1ad-4237-b87a-1c64f6c3e33e"
      }
    },
    "owner": "admin_orya",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/0ff86898-a1ad-4237-b87a-1c64f6c3e33e"
    }
  }
}
