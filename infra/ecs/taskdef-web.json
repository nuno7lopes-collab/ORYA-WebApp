{
  "family": "orya-web",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::495219734037:role/orya-ecs-exec-role",
  "taskRoleArn": "arn:aws:iam::495219734037:role/orya-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "orya-web",
      "image": "{{ECR_URI}}/orya-web:latest",
      "portMappings": [{"containerPort": 3000, "protocol": "tcp"}],
      "environment": [
        {"name": "NODE_ENV", "value": "production"}
      ],
      "secrets": [
        {"name": "DATABASE_URL", "valueFrom": "{{orya/prod/DATABASE_URL}}"},
        {"name": "DIRECT_URL", "valueFrom": "{{orya/prod/DIRECT_URL}}"},
        {"name": "QR_SECRET_KEY", "valueFrom": "{{orya/prod/QR_SECRET_KEY}}"},
        {"name": "APP_BASE_URL", "valueFrom": "{{orya/prod/APP_BASE_URL}}"},
        {"name": "NEXT_PUBLIC_BASE_URL", "valueFrom": "{{orya/prod/NEXT_PUBLIC_BASE_URL}}"},
        {"name": "ORYA_CRON_SECRET", "valueFrom": "{{orya/prod/ORYA_CRON_SECRET}}"},
        {"name": "SUPABASE_URL", "valueFrom": "{{orya/prod/SUPABASE_URL}}"},
        {"name": "NEXT_PUBLIC_SUPABASE_URL", "valueFrom": "{{orya/prod/NEXT_PUBLIC_SUPABASE_URL}}"},
        {"name": "SUPABASE_ANON_KEY", "valueFrom": "{{orya/prod/SUPABASE_ANON_KEY}}"},
        {"name": "NEXT_PUBLIC_SUPABASE_ANON_KEY", "valueFrom": "{{orya/prod/NEXT_PUBLIC_SUPABASE_ANON_KEY}}"},
        {"name": "SUPABASE_SERVICE_ROLE", "valueFrom": "{{orya/prod/SUPABASE_SERVICE_ROLE}}"},
        {"name": "STRIPE_SECRET_KEY", "valueFrom": "{{orya/prod/STRIPE_SECRET_KEY}}"},
        {"name": "STRIPE_WEBHOOK_SECRET", "valueFrom": "{{orya/prod/STRIPE_WEBHOOK_SECRET}}"},
        {"name": "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY", "valueFrom": "{{orya/prod/NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY}}"},
        {"name": "RESEND_API_KEY", "valueFrom": "{{orya/prod/RESEND_API_KEY}}"},
        {"name": "RESEND_FROM_EMAIL", "valueFrom": "{{orya/prod/RESEND_FROM_EMAIL}}"},
        {"name": "APPLE_SIGNIN_SERVICE_ID", "valueFrom": "{{orya/prod/APPLE_SIGNIN_SERVICE_ID}}"},
        {"name": "APPLE_SIGNIN_REDIRECT_URI", "valueFrom": "{{orya/prod/APPLE_SIGNIN_REDIRECT_URI}}"},
        {"name": "APPLE_SIGNIN_TEAM_ID", "valueFrom": "{{orya/prod/APPLE_SIGNIN_TEAM_ID}}"},
        {"name": "APPLE_SIGNIN_KEY_ID", "valueFrom": "{{orya/prod/APPLE_SIGNIN_KEY_ID}}"},
        {"name": "APPLE_SIGNIN_PRIVATE_KEY_BASE64", "valueFrom": "{{orya/prod/APPLE_SIGNIN_PRIVATE_KEY_BASE64}}"},
        {"name": "APNS_TEAM_ID", "valueFrom": "{{orya/prod/APNS_TEAM_ID}}"},
        {"name": "APNS_KEY_ID", "valueFrom": "{{orya/prod/APNS_KEY_ID}}"},
        {"name": "APNS_PRIVATE_KEY_BASE64", "valueFrom": "{{orya/prod/APNS_PRIVATE_KEY_BASE64}}"},
        {"name": "APNS_TOPIC", "valueFrom": "{{orya/prod/APNS_TOPIC}}"},
        {"name": "SENTRY_DSN", "valueFrom": "{{orya/prod/SENTRY_DSN}}"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/orya/prod/web",
          "awslogs-region": "eu-west-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -sf -H 'x-orya-cron-secret: ${ORYA_CRON_SECRET}' http://localhost:3000/api/internal/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
